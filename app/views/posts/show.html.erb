<div class="panel panel-default panel-design" >
    <div class="post_box">
      <div class="post_header">
        <%= image_tag @posts.user.photo, class: 'prof_pic_small' %>
        <%= link_to @posts.user.name, user_path(@posts.user_id), class: 'new-dec'%>
        <span class="timestamp pull-right"><%= distance_of_time_in_words(DateTime.now, @posts.created_at) %> ago</span>
      </div>
    
      <%= link_to post_path(@posts.id) do %>
        <center><%= image_tag @posts.photo, class: 'photo' %></center>
      <% end %>
      
      <div class="post_body">
        <%= link_to @posts.user_name, user_path(@posts.user_id) %> <%= @posts.description %>
      </div>	
  <% if @posts.user == current_user %>
    <%= link_to 'Edit Post', edit_post_path(@posts.id) %>
    <%= link_to 'Delete Post', post_path(@posts.id), method: :delete %>
  <% end %>

<div class="post_comments">
      
        <% if user_signed_in? %>
          <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
            <%= f.input :description, label: 'Comment', placeholder: 'Add a comment...' %>
            <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
          <% end %>
        <% end %>
      </div>
